# ==============================================================================
# LLM Provider Configuration
# ==============================================================================

# Provider selection: ollama | azure | grok | groq
LLM_PROVIDER=ollama

# Override default model/deployment name (optional)
# LLM_MODEL=

# Override default max tokens (optional)
# LLM_MAX_TOKENS=

# Override default context window (optional)
# LLM_CONTEXT_WINDOW=

# Request timeout in seconds
LLM_TIMEOUT=604800

# ==============================================================================
# Azure OpenAI Configuration
# ==============================================================================

# Azure OpenAI endpoint URL
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# API version
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Deployment name
AZURE_OPENAI_DEPLOYMENT=gpt-4o-2

# Authentication method: true = use az login, false = use API key
AZURE_USE_TOKEN_AUTH=true

# API key (required if AZURE_USE_TOKEN_AUTH=false)
# AZURE_OPENAI_API_KEY=

# Key Vault configuration for API key retrieval (optional)
# AZURE_OPENAI_KEYVAULT_URL=
AZURE_OPENAI_SECRET_NAME=azure-openai-api-key

# Token scope for cognitive services
AZURE_COGNITIVE_SERVICE_SCOPE=https://cognitiveservices.azure.com/.default

# ==============================================================================
# Embedding Provider Configuration
# ==============================================================================

# Provider selection: ollama | azure
EMBEDDING_PROVIDER=ollama

# Override default embedding model (optional)
# EMBEDDING_MODEL=

# Embedding dimension override (optional)
# EMBEDDING_DIMENSIONS=

# Embedding request timeout in seconds
EMBED_TIMEOUT=60

# ==============================================================================
# Azure Embeddings Configuration
# ==============================================================================

# Azure embedding deployment name
AZURE_OPENAI_EMBED_DEPLOYMENT=text-embedding-3-large

# Azure-specific dimensions override (optional)
# AZURE_OPENAI_EMBED_DIMENSIONS=

# ==============================================================================
# Other Provider Configuration
# ==============================================================================

# Ollama base URL
OLLAMA_BASE_URL=https://ollama.valiantlynx.com/v1

# Grok (x.ai) API key
# GROK_API_KEY=

# Groq API key
# GROQ_API_KEY=